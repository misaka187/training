.content {
  height: 100%;
  width: 100%;
  display: flex;
  background-color: #f7f7f7;
}

.left-wrap {
  width: 300rpx;
  padding-top: 40rpx;
}

.left-item {
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 38rpx;
}

.active-item {
  position: relative;
  background-color: #fff;
  color: #30ac97;
}

.active-item::before{
  content: "";
  position: absolute;
  left: 0;
  top: 20rpx;
  height: 80rpx;
  width: 6rpx;
  background: #30ac97;
}

.right-wrap {
  flex: 1;
  padding-top: 40rpx;
  background-color: #fff;
}

.right-item {
  position: relative;
  height: 120rpx;
  line-height: 120rpx;
  border-bottom: 2rpx solid #f7f7f7;
  padding-left: 38rpx;
}

.right-item::after{
  position: absolute;
  content: "";
  top:50%;
  margin-top: -20rpx;
  right: 50rpx;
  height: 40rpx;
  width: 40rpx;
  background-image: url(data:image/png;base64,);
  background-size:100%; 
  background-position: center; 
}
